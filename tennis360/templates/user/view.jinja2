{% extends "base.jinja2"%}

{% block title %} <title>{{post.title}}</title> {% endblock title%}

{% block main%}
    
    {% if post and post.deleted == False %}

        <a href={{post.link}} target="_blank"><h2> {{ post.title }}</h2></a>

        <a href="/profile/{{ post.user.id_ }}"> By: {{ post.user.username }} </a>

        <br>
        <br>


        <div class="text">
        
            <p> {{ post.text }} </p>
        </div>

        <br>
        <br>

        {% block tools %}
        {% endblock tools %}
    
    {% else %}

        <h2> Post not found </h2>

    {% endif %}

{% endblock main%}